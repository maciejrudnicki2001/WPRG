function which_table($a)
{
	$tablica[0] = rand();
	$tablica[1] = rand();
	$tablica[2] = rand();
	echo $tablica[$a];
}
which_table(2);
echo("<br>");
echo("<br>");
which_table(0);
echo("<br>");
echo("<br>");
which_table(1);

