function from_which_countr_i_am($a)
{
	$tablica["Polska"]="Polak";
	$tablica["Niemcy"]="Niemiec";
	$tablica["Rosja"]="Rosjanin";
	$tablica["Szwecja"]="Szwed";
	echo $tablica[$a];
}
from_which_countr_i_am("Niemcy");
